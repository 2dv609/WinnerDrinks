{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "settings": {
      "import/resolver": {
      "typescript": {}
      }
    },
    "rules": {
      "no-use-before-define": "off",
      // "@typescript-eslint/no-use-before-define": ["error"],
      "react/jsx-filename-extension": [ "warn", {"extensions": [".tsx"]} ],
      "semi": "off",
      "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never"
      }
      ],
      "max-len": ["off", { "code": 120 }], // shall be 'warn' instead of 'off'
      "no-underscore-dangle": "off",
      "no-else-return": "off",
      "no-undef": "off",
      "object-shorthand": "off",
      "no-await-in-loop": "off", // no need to be error (Promise.all[])
      "arrow-parens": "off",
      "no-restricted-syntax": "off",
      "no-unused-vars": "off",
      "lines-between-class-members":"off",
      "consistent-return":"off",
      "@typescript-eslint/no-use-before-define": "off",
      "no-param-reassign":"off",
      "import/no-duplicates": "off",
      "no-plusplus":"off",
      "keyword-spacing":"off",
      "arrow-body-style":"off",
      "one-var-declaration-per-line":"off",
      "class-methods-use-this":"off",
      "prefer-destructuring":"off",
      "object-curly-newline":"off",
      "comma-dangle":"off",
      "no-shadow":"off",
      "no-void":"off",
      "react/react-in-jsx-scope":"off", // no need when react is within scope
      "camelcase":"off",
      "react/prop-types":"off",
      "react/jsx-closing-bracket-location":"off",
      "jsx-a11y/click-events-have-key-events": "off",
      "jsx-a11y/no-static-element-interactions":"off",
      "react/button-has-type":"off", // no need for button type
      "react/no-array-index-key": "off",
      "no-confusing-arrow": "off",
      "react/no-unescaped-entities": "off",
      "linebreak-style":"off",
      "no-console":"off", // warn
      "jsx-a11y/label-has-associated-control": "off"
    }
}
